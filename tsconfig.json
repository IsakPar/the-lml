{
  "references": [
    { "path": "packages/config" },
    { "path": "packages/http" },
    { "path": "packages/metrics" },
    { "path": "packages/platform/api" },
    { "path": "packages/platform/worker" },
    { "path": "packages/migrations" },
    { "path": "packages/idempotency" },
    { "path": "packages/ratelimit" },
    { "path": "packages/shared" },
    { "path": "packages/events" },
    { "path": "packages/database" },
    { "path": "packages/container" },
    { "path": "packages/notifications" },
    { "path": "services/identity" },
    { "path": "services/ticketing" },
    { "path": "services/payments" },
    { "path": "services/venues" },
    { "path": "services/inventory" },
    { "path": "services/verification" },
    { "path": "apps/api" },
    { "path": "apps/worker" }
  ],
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@thankful/metrics": ["packages/metrics/src/index.ts"],
      "@thankful/shared": ["packages/shared/src/index.ts"],
      "@thankful/events": ["packages/events/src/index.ts"],
      "@thankful/database": ["packages/database/src/index.ts"],
      "@thankful/container": ["packages/container/src/index.ts"],
      "@thankful/notifications": ["packages/notifications/src/index.ts"],
      "@thankful/ratelimit": ["packages/ratelimit/src/index.ts"]
    },
    "outDir": "./dist"
  }
}

