{
  "references": [
    { "path": "packages/config" },
    { "path": "packages/http" },
    { "path": "packages/metrics" },
    { "path": "packages/platform/api" },
    { "path": "packages/platform/worker" },
    { "path": "packages/migrations" },
    { "path": "packages/idempotency" },
    { "path": "packages/ratelimit" },
    { "path": "apps/api" },
    { "path": "apps/worker" }
